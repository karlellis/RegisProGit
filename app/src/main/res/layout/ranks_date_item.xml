<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RanksRatelinearLayout" android:layout_marginLeft="4dp" android:layout_marginTop="6dp"
        android:layout_marginRight="4dp" android:layout_marginBottom="2dp" android:orientation="vertical">

    <TextView
            android:text="1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#F7EB9F"
            android:id="@+id/date_ranks_subject"
            android:paddingLeft="@dimen/padding_8sp"
            android:paddingRight="@dimen/padding_8sp"
            android:layout_marginBottom="6dp"
            android:textSize="24sp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#F7EB9F"
            android:id="@+id/date_ranks_date"
            android:layout_marginBottom="6dp"
            android:textSize="24sp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#F7EB9F"
            android:id="@+id/date_ranks_type"
            android:textSize="24sp"
    />
</LinearLayout>