<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/class_title"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:background="#AED581"
            android:orientation="horizontal"
            android:id="@+id/class_item_name"
            android:layout_marginTop="6dp" app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/class_students_img" android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp" android:layout_marginBottom="2dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/class_students_img"
            android:background="#AED581"
            app:srcCompat="@drawable/ic_students"
            app:layout_constraintStart_toEndOf="@+id/class_item_name"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/class_trash_img"
            android:layout_marginBottom="2dp" android:layout_marginRight="2dp" android:layout_marginEnd="2dp"
            android:paddingLeft="@dimen/padding_8sp" android:paddingRight="@dimen/padding_8sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/class_trash_img"
            android:background="#AED581"
            app:srcCompat="@drawable/ic_delete"
            app:layout_constraintStart_toEndOf="@+id/class_students_img" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"
            android:paddingLeft="@dimen/padding_8sp" android:paddingRight="@dimen/padding_8sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>